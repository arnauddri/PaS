@font-face
  font-family 'Proxima-Black'
  src url('./static/fonts/Proxima/ProximaNova-Black.otf')

@font-face
  font-family 'Proxima-Regular'
  src url('./static/fonts/Proxima/ProximaNova-Regular.otf')

@font-face
  font-family 'Proxima-Light'
  src url('./static/fonts/Proxima/ProximaNova-Light.otf')

@font-face
  font-family 'ProximaCond-Light'
  src url('./static/fonts/Proxima/ProximaNovaCond-Light.otf')

@font-face
  font-family 'Proxima-Bold'
  src url('./static/fonts/Proxima/ProximaNova-Bold.otf')

html, body
  height 100%

a:hover
  text-decoration none

nav
  &
    background white
  a
    color rgba(127, 140, 141,1.0)

*
  font-family 'Proxima-Regular'

li
  list-style none

#landing
  &
    height 80%
    position relative
    text-align center
    background url('./../static/gradient-transparent.png')
    background-repeat: repeat-x
    background-position: bottom
    border-bottom dashed 2px rgba(115,124,147,0.3)

  & > .container
    &
      background url('./../static/gopro-home.png')
      background-repeat no-repeat
      background-position 50% 80%
      position relative
      text-align center
      height 100%
      right 0
      left 0
      transition all ease 0.2s

    &--left
      left 200px

    &--right
      right 200px

  .caption
    &
      padding-top 120px
    h1
      margin-top 0
      color #2c3e50
      color rgba(41, 128, 185,1.0)
      font-family 'Proxima-Bold'
    h2
      font-size 18px
      color #4aa3df

  .cta
    h2
      z-index 999
      cursor pointer
      color white
      border-radius 50%
      width 300px
      height 300px
      margin auto
      position relative
      padding-top 108px
      transition all ease 0.2s

    a
      color white
      cursor pointer

    i
      margin-top 16px

  .cta:first-child
    h2
      background #3BB172
      margin-left -160px
    h2:hover
      background #308d5b

  .cta:last-child
    h2
      background #3BABDE
      margin-right -160px
    h2:hover
      background #3290ba

  #lend,
  #rent
    &
      position absolute
      top 0
      padding-top 120px
      width 100%
      height 100%
      background white
      transition all ease 0.2s
      z-index 1
      background-color white
      background-image url('./../static/gradient-transparent.png')
      background-repeat: repeat-x
      background-position: bottom

    .container
      position relative

    ul
      margin auto
      display inline-block
    li
      &
        text-align left
      p
        display inline-block
        font-size 18px
        color #666666
    li
      .fa
        border-radius 50%
        width 40px
        height 40px
        color white
        padding-top 5px
        text-align center
        margin-right 10px

    .fa-times-circle-o
      &
        cursor pointer
        position absolute
        top 0
        right 140px
        opacity 0.6
        transition all ease 0.2s
      &:hover
        opacity 1

    h2
      display inline-block
      padding-bottom 30px
      border-bottom solid 1px #D4D7DE

    p.p
      color #666666
      margin-top 20px
      font-size 20px

    .btn
      display inline-block
      color white
      font-size 22px
      margin-top 40px

  #lend
    &
      right -100%

    &.lend--center
      right 0%

    .fa-times-circle-o,
    h2
      color #3BB172

    li
      .fa
        background #3BB172

    .btn
      background #3BB172
      transition all ease 0.2s
    .btn:hover
      background #308d5b

  #rent
    &
      left -100%

    &.rent--center
      left 0%

    .fa-times-circle-o,
    h2
      color #3BABDE

    li
      .fa
        background #3BABDE

    .btn
      background #3BABDE
      transition all ease 0.2s
    .btn:hover
      background #3290ba

#usp
  &
    padding-top 20px
    padding-bottom 120px

  .row
    padding-top 60px

  h2
    color #3BB172
    margin-top 20px
    margin-bottom 120px
  .item
    text-align center
    border-right solid 1px #E0E0E0
  .item:last-child
    border none

  .item
    h3
      color #2980b9
    p
      max-width 260px
      margin auto
      color #7f8c8d

#contact
  &
    padding-top 80px
    padding-bottom 60px
    background #F6F6F6

  div
    text-align center

  .btn
    color white
    display inline-block
    border-color #3BABDE
    background #3BABDE
    font-size 22px
    margin 0px 8px
    transition all ease 0.2s

  .btn:hover
    background #3290ba

  .btn-phone
    color #7f8c8d
    background white
    border solid #7f8c8d 1px

  .btn-phone:hover
    background white

  .fa-phone
    color #666
    margin-right 8px

  .cta
    margin-bottom 30px

#packs
  &
    padding-top 80px
    padding-bottom 80px
    text-align center

  h2
    text-align center
    color #2980b9

  .pricing
    color rgba(52, 152, 219, 1)
    margin-top 40px
    border-radius 8px
    font-size 22px
    padding 6px 18px 4px
    background #3BB172
    color white
    display inline-block

  .more
    &
      color #3498DB
      margin-top 40px
      border-radius 8px
      font-size 22px
      padding 6px 18px 4px
      border solid 2px #3498DB
      display inline-block
      transition all ease 0.2s
    &:hover
      background #3498DB
      color white

  .pack
    &
      padding 28px
      margin-top 80px

    &__owner
      position relative
      img
        width 100px
        height 100px
        top -64px
        left 120px
        position absolute
        border solid 2px rgba(52, 152, 219, 0.6)
      img, em
        display block
        margin auto
      em
        line-height 10px
      ul
        margin 32px auto 0px
        padding 0
        margin-bottom 0
      li
        display inline
      .fa-star
        color #bdc3c7
      .fa-star-yellow
        color #f1c40f

    .owner
      border-top-left-radius 6px
      border-top-right-radius 6px
      border solid 2px rgba(52, 152, 219, 0.6)
      border-bottom none
      width 180px
      margin auto
      padding-bottom 10px


    &__container
      margin auto
      max-width 222px
      display block
      border-radius 6px
      border solid 2px rgba(52, 152, 219, 0.6)
    .type
      &
        display block
        background-position 50%
        background-repeat no-repeat
        padding-top 120px

      &.casual
        background url('./../static/casual.jpg')
      &.water
        background url('./../static/water.jpg')
      &.mountain
        background url('./../static/mountain.jpg')
      &.thrill
        background url('./../static/thrill.jpg')

      h3
        bottom 0
        margin 0px
        color white
        background rgba(90, 90, 90, 0.6)
        padding 4px

    .content
      &
        display block
        border-top solid 2px rgba(52, 152, 219, 0.6)
      ul
        padding 0
        padding-top 8px
        padding-left 40px
      li
        text-align left
        margin-top 4px
        list-style none
      i.fa-check
        margin-right 6px
        color #27ae60

    .price
      &
        color white
        display block
        background rgba(52, 152, 219, 1)
        transition all ease 0.2s
        cursor pointer

      &:hover
        background #3290ba

      i.fa-certificate
        margin-right 10px

      h4
        margin 0
        padding 10px

#wallpapers
  &
    min-height 600px
    width 100%
    position relative

  .caption
    display block
    position absolute
    top 0
    min-height 600px
    width 100%
    opacity 0
    transition all ease 0.4s
    background rgba(30, 30, 30, 0.4)
    color white
    text-align center
    padding-top 260px
    font-style italic

  &:hover
    .caption
      opacity 1

  .btn
    color rgba(52, 152, 219, 1)
    margin-top 40px
    border-radius 8px
    font-size 22px
    padding 6px 18px 4px
    background #3BB172
    color white
    display inline-block
    font-style normal
    transition all ease 0.2s

  .btn:hover
    background #308d5b

  .wp
    span
      display block
      position absolute
      top 0
      min-height 600px
      width 100%
      background-size cover
      background-position 50%
      animation-name hideWp
      animation-iteration-count infinite
      animation-direction normal
      animation-duration 24s

    &--1
      background url('./../static/wp_1.jpg')
      -webkit-animation-delay 0s
      animation-delay 0s

    &--2
      background url('./../static/wp_2.jpg')
      -webkit-animation-delay 4s
      animation-delay 6s

    &--3
      background url('./../static/wp_3.jpg')
      -webkit-animation-delay 8s
      animation-delay 12s

    &--4
      background url('./../static/wp_4.jpg')
      -webkit-animation-delay 12s
      animation-delay 18s

@keyframes hideWp {
  0% {
    opacity 1
  }

  20% {
    opacity 0
  }

  80% {
    opacity 0
  }

  100% {
    opacity 1
  }
}

#feedbacks
  &
    padding-top 80px
    padding-bottom 80px
    text-align center

  h1
    color #2980b9

  *
    transition all ease 0.2s

  .carousel
    &, .item
      height 200px
    &-control
      background-image none
    &-indicators
      li.active
        background #2980b9
      li
        border solid 1px #2980b9

    .glyphicon
      color #2980b9
      text-shadow none
      transition all ease 0.2s

    .item
      &
        padding 40px 20px 0px
      span:first-child
        float left
        padding-left 40px
      small
        color #3BB172
      em
        color #95a5a6
        font-style normal
  .btn
    color rgba(52, 152, 219, 1)
    margin-top 40px
    border-radius 8px
    font-size 22px
    padding 6px 18px 4px
    background #3BB172
    color white
    display inline-block
    font-style normal
    transition all ease 0.2s

  .btn:hover
    background #308d5b

